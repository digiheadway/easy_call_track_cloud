{
    "manifest_version": 3,
    "name": "DOM Access Checker & Form Blaster",
    "version": "1.2",
    "description": "Checks if the extension can access the DOM and automates form submissions.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "runner.html",
                "runner.js",
                "popup.css",
                "popup.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}