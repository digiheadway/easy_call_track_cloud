<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DeviceAdmin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#238636</item>
        <item name="colorPrimaryVariant">#1B2D23</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#1F6FEB</item>
        <item name="colorSecondaryVariant">#161B22</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:colorBackground">#0D1117</item>
        <item name="colorSurface">#161B22</item>
        <item name="colorOnSurface">#C9D1D9</item>
        <item name="colorError">#F85149</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="android:statusBarColor">#0D1117</item>
        <item name="android:navigationBarColor">#0D1117</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="Theme.DeviceAdmin.Fullscreen" parent="Theme.DeviceAdmin">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.DeviceAdmin.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">#161B22</item>
        <item name="colorOnSurface">#C9D1D9</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
    </style>

    <style name="DialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogBodyStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">#8B949E</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
