<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/setupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Controller"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enterprise Management"
                    android:textSize="13sp"
                    android:textColor="#8B949E" />
            </LinearLayout>
        </LinearLayout>

        <!-- Device ID Input Card (shown when not saved) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/deviceIdInputCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Registration"
                    android:textSize="13sp"
                    android:textColor="#8B949E"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/deviceIdInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Device ID"
                    app:boxBackgroundColor="#21262D"
                    app:boxStrokeColor="#30363D"
                    app:hintTextColor="#8B949E"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deviceIdInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveDeviceIdButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Save Device ID"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#238636"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Device ID Saved Card (shown when already saved) - Simple with check icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/deviceIdSavedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <!-- Check Circle Icon -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device ID"
                        android:textSize="12sp"
                        android:textColor="#8B949E" />

                    <TextView
                        android:id="@+id/savedDeviceIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC123456"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Edit Button with rounded background -->
                <FrameLayout
                    android:id="@+id/editDeviceIdButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/edit_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Edit Device ID">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit" />
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Permissions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required Permissions"
                    android:textSize="13sp"
                    android:textColor="#8B949E"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <!-- Permissions Table -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#21262D"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp"
                            android:background="#1C2128">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Permission"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:textColor="#8B949E"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:textColor="#8B949E"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Device Admin Row -->
                        <LinearLayout
                            android:id="@+id/permissionDeviceAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Device Admin"
                                    android:textSize="15sp"
                                    android:textColor="#C9D1D9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Required for management"
                                    android:textSize="12sp"
                                    android:textColor="#6E7681" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionDeviceAdminStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grant"
                                android:textSize="13sp"
                                android:textColor="#F85149"
                                android:textStyle="bold"
                                android:background="@drawable/permission_badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#30363D" />

                        <!-- Accessibility Row -->
                        <LinearLayout
                            android:id="@+id/permissionAccessibility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Accessibility Service"
                                    android:textSize="15sp"
                                    android:textColor="#C9D1D9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Required for protection"
                                    android:textSize="12sp"
                                    android:textColor="#6E7681" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionAccessibilityStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grant"
                                android:textSize="13sp"
                                android:textColor="#F85149"
                                android:textStyle="bold"
                                android:background="@drawable/permission_badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#30363D" />

                        <!-- Overlay Row -->
                        <LinearLayout
                            android:id="@+id/permissionOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Display Overlay"
                                    android:textSize="15sp"
                                    android:textColor="#C9D1D9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Required for lock screen"
                                    android:textSize="12sp"
                                    android:textColor="#6E7681" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionOverlayStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grant"
                                android:textSize="13sp"
                                android:textColor="#F85149"
                                android:textStyle="bold"
                                android:background="@drawable/permission_badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hide Icon Option -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hideIconCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hide App Icon"
                        android:textSize="15sp"
                        android:textColor="#C9D1D9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hide icon after setup"
                        android:textSize="12sp"
                        android:textColor="#6E7681" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/hideIconSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="#3FB950"
                    app:trackTint="#21262D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Protection Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/completeSetupButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add Protection"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:enabled="false"
            app:backgroundTint="#238636"
            app:cornerRadius="12dp"
            android:layout_marginBottom="20dp"
            app:icon="@android:drawable/ic_lock_lock"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="8dp" />

        <!-- Admin Zone (only visible when protection is enabled) -->
        <LinearLayout
            android:id="@+id/adminZoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#21262D"
                android:layout_marginVertical="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Zone"
                android:layout_marginBottom="12dp"
                android:textColor="#6E7681"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testLockButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Test Lock Screen"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#0969DA"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_lock_lock"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconPadding="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeSetupButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Remove Protection"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#DA3633"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconPadding="8dp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
