<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Phone permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />

    <!-- Contact permissions -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <!-- Internet permission for potential cloud features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Callyzer2"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Callyzer2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Customer Management Activity -->
        <activity
            android:name=".ui.CustomerActivity"
            android:exported="false"
            android:theme="@style/Theme.Callyzer2" />

        <!-- Call Log Activity -->
        <activity
            android:name=".ui.CallLogActivity"
            android:exported="false"
            android:theme="@style/Theme.Callyzer2" />

        <!-- Add Note Activity -->
        <activity
            android:name=".ui.AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Callyzer2" />

        <!-- Customer Detail Activity -->
        <activity
            android:name=".ui.CustomerDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Callyzer2" />

    </application>

</manifest>