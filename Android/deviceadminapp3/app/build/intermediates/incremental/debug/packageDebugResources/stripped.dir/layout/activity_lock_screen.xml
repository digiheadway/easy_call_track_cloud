<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lock_background"
    android:fitsSystemWindows="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Header Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="@string/device_locked"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                app:tint="@color/error" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_locked"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- EMI Message -->
            <TextView
                android:id="@+id/emiMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emi_pending"
                android:textSize="16sp"
                android:textColor="@color/error"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="32dp" />

            <!-- Device ID Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/lock_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_device"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/text_muted"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/deviceIdDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_id_placeholder"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Check Status Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkStatusButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/check_status"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconGravity="textStart"
                app:iconTint="@color/on_primary"
                app:iconPadding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Call Support Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/callSupportButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/call_support"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconGravity="textStart"
                app:iconTint="@color/on_primary"
                app:iconPadding="8dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_dark"
                android:layout_marginBottom="24dp" />

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Break Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/breakButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="@string/take_break"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    app:backgroundTint="@color/lock_card"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="8dp" />

                <!-- Master PIN Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/masterPinButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="@string/master_pin"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/warning"
                    app:backgroundTint="@color/lock_card"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/warning"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- PIN Input Container (Hidden by default) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pinContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/lock_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_pin"
                        app:boxBackgroundColor="@color/lock_input"
                        app:boxStrokeColor="@color/border"
                        app:hintTextColor="@color/text_muted"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pinInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:letterSpacing="0.3"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/unlockButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="@string/unlock"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary"
                        app:backgroundTint="@color/warning"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_footer"
                android:textSize="12sp"
                android:textColor="@color/text_disabled"
                android:textAlignment="center"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
