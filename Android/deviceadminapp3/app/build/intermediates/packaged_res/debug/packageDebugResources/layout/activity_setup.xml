<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/setupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_controller"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enterprise_management"
                    android:textSize="13sp"
                    android:textColor="@color/text_muted" />
            </LinearLayout>
        </LinearLayout>

        <!-- Device ID Input Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/deviceIdInputCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_registration"
                    android:textSize="13sp"
                    android:textColor="@color/text_muted"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/deviceIdInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_device_id"
                    app:boxBackgroundColor="@color/surface_variant"
                    app:boxStrokeColor="@color/border"
                    app:hintTextColor="@color/text_muted"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deviceIdInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveDeviceIdButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="@string/save_device_id"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_primary"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Device ID Saved Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/deviceIdSavedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/saved" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_id"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted" />

                    <TextView
                        android:id="@+id/savedDeviceIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        tools:text="ABC123456" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/editDeviceIdButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_circular"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/edit">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@null" />
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Permissions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/required_permissions"
                    android:textSize="13sp"
                    android:textColor="@color/text_muted"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp"
                            android:background="@color/surface_header">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/permission"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:textColor="@color/text_muted"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:textColor="@color/text_muted"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Device Admin Row -->
                        <LinearLayout
                            android:id="@+id/permissionDeviceAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/device_admin"
                                    android:textSize="15sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/device_admin_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_disabled" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionDeviceAdminStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grant"
                                android:textSize="13sp"
                                android:textColor="@color/error"
                                android:textStyle="bold"
                                android:background="@drawable/badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/border" />

                        <!-- Accessibility Row -->
                        <LinearLayout
                            android:id="@+id/permissionAccessibility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/accessibility_service"
                                    android:textSize="15sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/accessibility_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_disabled" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionAccessibilityStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grant"
                                android:textSize="13sp"
                                android:textColor="@color/error"
                                android:textStyle="bold"
                                android:background="@drawable/badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/border" />

                        <!-- Overlay Row -->
                        <LinearLayout
                            android:id="@+id/permissionOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="14dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/display_overlay"
                                    android:textSize="15sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/overlay_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_disabled" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/permissionOverlayStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grant"
                                android:textSize="13sp"
                                android:textColor="@color/error"
                                android:textStyle="bold"
                                android:background="@drawable/badge_pending"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hide Icon Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hideIconCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hide_app_icon"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hide_icon_desc"
                        android:textSize="12sp"
                        android:textColor="@color/text_disabled" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/hideIconSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/success"
                    app:trackTint="@color/surface_variant" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Protection Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/completeSetupButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/add_protection"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_primary"
            android:enabled="false"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            android:layout_marginBottom="20dp"
            app:icon="@android:drawable/ic_lock_lock"
            app:iconGravity="textStart"
            app:iconTint="@color/on_primary"
            app:iconPadding="8dp" />

        <!-- Admin Zone -->
        <LinearLayout
            android:id="@+id/adminZoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_dark"
                android:layout_marginVertical="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_zone"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_disabled"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testLockButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/test_lock_screen"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_lock_lock"
                app:iconGravity="textStart"
                app:iconTint="@color/on_primary"
                app:iconPadding="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeSetupButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/remove_protection"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                app:backgroundTint="@color/error"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconTint="@color/on_primary"
                app:iconPadding="8dp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
