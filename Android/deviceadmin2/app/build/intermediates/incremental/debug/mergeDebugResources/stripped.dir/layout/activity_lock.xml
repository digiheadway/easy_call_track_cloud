<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE FROZEN"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEmiAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMI Pending: $0.00"
        android:textColor="@color/red_error"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvServerMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This device is locked by the enterprise administrator. Please contact support to resolve."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmiAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCheckStatus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Check Status"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvServerMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEmergencyCall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Emergency Call"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheckStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBreakRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request 2-Min Break"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/teal_200"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnEmergencyCall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnBreakRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMasterUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="#333333"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
