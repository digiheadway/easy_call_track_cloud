<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/caller_id_card_bg"
        android:elevation="8dp">

        <!-- Single State Card: Simple and Informative -->
        <LinearLayout
            android:id="@+id/mainCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Top Row: Name, Budget, and Dismiss Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#F0F6FC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Lead Name" />

                <TextView
                    android:id="@+id/budgetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#F0F6FC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    android:text="â‚¹0" />

                <ImageButton
                    android:id="@+id/closeButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#8B949E"
                    android:alpha="0.8"
                    android:padding="4dp"
                    android:contentDescription="Close"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Row 2: Stage, Priority, and Segment -->
            <LinearLayout
                android:id="@+id/detailsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Stage -->
                <LinearLayout
                    android:id="@+id/stageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_pie_chart"
                        android:contentDescription="Stage"
                        android:tint="#F59E0B" />
                    <TextView
                        android:id="@+id/stageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="#F59E0B"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Stage" />
                </LinearLayout>

                <!-- Priority -->
                <LinearLayout
                    android:id="@+id/priorityContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_flag"
                        android:contentDescription="Priority"
                        android:tint="#F59E0B" />
                    <TextView
                        android:id="@+id/priorityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="#F59E0B"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="High" />
                </LinearLayout>

                <!-- Segment -->
                <LinearLayout
                    android:id="@+id/segmentContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_category"
                        android:contentDescription="Segment"
                        android:tint="#8B949E" />
                    <TextView
                        android:id="@+id/segmentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/tag_badge_bg"
                        android:textColor="#F0F6FC"
                        android:textSize="11sp"
                        android:text="Segment" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: Note -->
            <LinearLayout
                android:id="@+id/noteContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:visibility="gone">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_note"
                    android:contentDescription="Note"
                    android:tint="#8B949E" />
                <TextView
                    android:id="@+id/noteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#8B949E"
                    android:textSize="13sp"
                    android:text="Note content..."
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
