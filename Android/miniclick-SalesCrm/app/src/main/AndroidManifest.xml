<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare visibility for WhatsApp packages on Android 11+ -->
    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
        <package android:name="com.gbwhatsapp" />
        <package android:name="com.yowhatsapp" />
        <package android:name="com.fmwhatsapp" />
        <package android:name="com.whatsapp.plus" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" android:host="wa.me" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="whatsapp" />
        </intent>
    </queries>

    <!-- Internet permissions for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Notification permission (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Call log and contacts permissions for Calls tab -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Storage permissions for call recordings -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    
    <!-- Alarm permissions -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Vibration permission -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Foreground service permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    
    <!-- Boot receiver permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Full screen intent for high priority reminders -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    
    <!-- Wake lock for alarms -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Battery optimization exemption for background call monitoring -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:name=".SalesCrmApplication"
        android:allowBackup="false"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SalesCrm"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop"
            android:theme="@style/Theme.SalesCrm">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Intent filter for receiving leads from other apps -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- Custom intent action for adding leads programmatically -->
            <intent-filter>
                <action android:name="com.example.salescrm.ACTION_ADD_LEAD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Reminder Broadcast Receiver for app actions -->
        <receiver
            android:name=".notification.ReminderBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.salescrm.ACTION_SHOW_REMINDER" />
                <action android:name="com.example.salescrm.ACTION_ADVANCE_REMINDER" />
                <action android:name="com.example.salescrm.ACTION_SNOOZE_REMINDER" />
                <action android:name="com.example.salescrm.ACTION_SNOOZE_30_REMINDER" />
                <action android:name="com.example.salescrm.ACTION_DISMISS_REMINDER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <!-- Call Receiver for post-call ID -->
        <receiver
            android:name=".notification.CallReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
        
        <!-- Reminder Foreground Service -->
        <service
            android:name=".notification.ReminderService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false" />
            
        <!-- Caller ID Overlay Service -->
        <service
            android:name=".notification.CallerIdOverlayService"
            android:foregroundServiceType="specialUse"
            android:exported="false" />
            
        <!-- Call Monitor Service - persistent background call monitoring -->
        <service
            android:name=".notification.CallMonitorService"
            android:foregroundServiceType="specialUse"
            android:exported="false">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="call_monitoring" />
        </service>
        
        <activity
            android:name=".notification.PostCallActivity"
            android:theme="@style/Theme.SalesCrm"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:exported="false"
            android:taskAffinity=""
            android:showOnLockScreen="true"
            android:turnScreenOn="true" />
            
        <!-- Reminder Full Screen Activity -->
        <activity
            android:name=".notification.ReminderActivity"
            android:exported="false"
            android:theme="@style/Theme.SalesCrm"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:launchMode="singleTop" />
            
    </application>

</manifest>