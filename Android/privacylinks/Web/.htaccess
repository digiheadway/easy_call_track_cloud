# Enable URL rewriting
RewriteEngine On

# Allow access to .well-known directory (for App Links verification)
RewriteCond %{REQUEST_URI} ^/\.well-known/ [NC]
RewriteRule ^ - [L]

# Allow direct access to specific files (homepage, policies, etc.)
RewriteCond %{REQUEST_URI} ^/(index\.html|privacy-policy\.html|terms-of-usage\.html|delete-account\.html|contact\.php|open\.php|style\.css)$ [NC]
RewriteRule ^ - [L]

# Allow access to static files (images, css, js, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route everything else (tokens) to index.php
RewriteRule ^(.*)$ index.php [QSA,L]
